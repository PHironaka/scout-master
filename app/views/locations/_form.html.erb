<div class="container">


<h2>Create a new Location</h2>

  <%= form_for @location, html: { multipart: true, class: 'new_location form-horizontal' }  do |p| %>
    <fieldset>
      <div class="form-group">
        <div class="col-md-8">
      <%= p.text_field :title, placeholder: 'Title', class: 'form-control' %>
      </div>
        </div>

        <div class="form-group">
          <div class="col-md-8">
          <%= p.text_field :address, placeholder: 'Address', class: 'form-control'%>
        </div>
        </div>

      <div class="form-group">
          <div class="col-md-8">
            <%= form_for @location do |f| %>
      <%= md_simple_editor  do %>
          <%= f.text_area :body %>
      <% end %>
  <% end %>
        </div>
  </div>


  <div class="form-group">
      <div class="col-md-8">
        <%= p.label :tag_list, "Tags (separated by commas)" %>
         <%= p.text_field :tag_list %>

           </div>
</div>

<div class="form-group">
  <div class="col-md-8">
  <%= p.file_field :image, class: 'form-control' %>
</div>
</div>

  <div class="form-group">
    <div class="col-md-8">
      <%= p.submit 'Create', class: 'btn btn-success' %>
        </div>
          </div>
    </fieldset>
</div>
  <% end %>
