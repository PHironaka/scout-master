


<%= form_for @user, :html => {class: 'new_user form-horizontal form-horizontal col-md-offset-2', multipart: true } do |f| %>
<h1><%= @user.name %>, Edit your account</h1>

    <fieldset>
        <div class="form-group">
            <%= f.label :name, 'Name*', class: 'col-md-4 control-label' %>
            <div class="col-md-5">
              <!-- <span class="input-group-addon">@</span> -->
                <%= f.text_field :name, class: 'form-control' %>
            </div>
        </div>
        <div class="form-group">
            <%= f.label :email, 'Email*', class: 'col-md-4 control-label' %>
            <div class="col-md-5">
                <%= f.text_field :email, class: 'form-control' %>
            </div>
        </div>
        <div class="form-group">
            <%= f.label :password, 'Password*', class: 'col-md-4 control-label' %>
            <div class="col-md-5">
                <%= f.password_field :password, class: 'form-control' %>
            </div>
        </div>
        <!-- <div class="form-group">
            <%= f.label :password_confirmation, 'Confirm Password*', class: 'col-md-4 control-label' %>
            <div class="col-md-5">
                <%= f.password_field :password_confirmation, class: 'form-control' %>
            </div>
        </div> -->

        <div class="form-group">
            <%= f.label :summary, 'Summary', class: 'col-md-4 control-label' %>
            <div class="col-md-5">
                <%= f.text_area :summary, class: 'form-control' %>
            </div>
        </div>

        <div class="form-group">
            <%= f.label :hometown, 'Hometown', class: 'col-md-4 control-label' %>
            <div class="col-md-5">
                <%= f.text_field :hometown, class: 'form-control' %>
            </div>
        </div>

        <div class="form-group">
            <%= f.label :portfolio, 'Portfolio', class: 'col-md-4 control-label' %>
            <div class="col-md-5">
                <%= f.text_field :portfolio, class: 'form-control' %>
            </div>
        </div>

        <div class="form-group">
            <%= f.label :instagram, 'Instagram', class: 'col-md-4 control-label' %>
            <div class="col-md-5">
                <%= f.text_field :instagram, class: 'form-control' %>
            </div>
        </div>

        <div class="form-group">
            <%= f.label :socialtwo, 'Twitter', class: 'col-md-4 control-label' %>
            <div class="col-md-5">
                <%= f.text_field :socialtwo, class: 'form-control' %>
            </div>
        </div>


        <div class="form-group">
            <%= f.label :avatar, 'Profile Pic*', class: 'col-md-4 control-label' %>
            <div class="col-md-5">
                  <%= f.file_field :avatar, class: 'form-control' %>
            </div>
        </div>


        <div class="form-group">
            <div class="col-md-8 col-md-offset-4">
                <%= f.submit 'Update Account', class: 'btn btn-success' %>
            </div>
        </div>
    </fieldset>
<% end %>
