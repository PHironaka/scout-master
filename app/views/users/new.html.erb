<% provide(:title, 'Create Account') %>
<div class="container">
<%= form_for @user, :html => {class: 'new_user form-horizontal', multipart: true } do |f| %>
<h1>Create account</h1>
    <fieldset>
        <div class="form-group col-sm-10">
            <%= f.label :name, 'Name*', class: 'col-md-2 control-label' %>
            <div class="col-sm-8">
                <%= f.text_field :name, class: 'form-control' %>
            </div>
        </div>
        <div class="form-group col-sm-10">
            <%= f.label :email, 'Email*', class: 'col-md-2 control-label' %>
            <div class="col-sm-8">
                <%= f.text_field :email, class: 'form-control' %>
            </div>
        </div>
        <div class="form-group col-sm-10">
            <%= f.label :password, 'Password*', class: 'col-md-2 control-label' %>
            <div class="col-sm-8">
                <%= f.password_field :password, class: 'form-control' %>
            </div>
        </div>
        <div class="form-group col-sm-10">
            <%= f.label :password_confirmation, 'Confirm Password*', class: 'col-md-2 control-label' %>
            <div class="col-sm-8">
                <%= f.password_field :password_confirmation, class: 'form-control' %>
            </div>
        </div>

        <div class="form-group col-sm-10">
            <%= f.label :avatar, 'Profile Pic*', class: 'col-md-2 control-label' %>
            <div class="col-md-8">
                  <%= f.file_field :avatar, class: 'form-control' %>
            </div>
        </div>


        <div class="form-group col-sm-10">
            <div class="col-md-8 col-md-offset-2">
                <%= f.submit 'Create Account', class: 'btn btn-success' %>
            </div>
        </div>
    </fieldset>
<% end %>
  </div>
