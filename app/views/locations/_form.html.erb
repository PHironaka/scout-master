<h2>Create a new Location</h2>

  <%= form_for @location, html: { multipart: true, class: 'new_location form-horizontal' }  do |p| %>
    <fieldset>
      <div class="form-group">
        <div class="col-md-6">
      <%= p.text_field :title, placeholder: 'Title', class: 'form-control' %>
      </div>
        </div>

        <div class="form-group">
          <div class="col-md-6">
          <%= p.text_field :address, placeholder: 'Address', class: 'form-control'%>
        </div>
        </div>
        
      <div class="form-group">
          <div class="col-md-6">
      <%= p.text_area :body, placeholder: 'Body', class: 'form-control' %>
        </div>
  </div>




        <div class="form-group">
          <div class="col-md-6">
          <%= p.file_field :image, class: 'form-control' %>
        </div>
        </div>
  <div class="form-group">
    <div class="col-md-6">
      <%= p.submit 'Create', class: 'btn btn-success' %>
        </div>
          </div>
    </fieldset>

  <% end %>
