

<div class="comment col-md-6">
  <h2><%= pluralize(@comments.count, "Comment") %></h2>


<% @comments.each do |comment| %>
<div class="comment-list ">
  <div class="comment-list--image">
    <%= image_tag comment.user.avatar.url(:thumb) %>
  </div>
<div class="comment comment-list--content  col-md-10">
  <h3><%= link_to @location.user.name, user_path(@location.user)   %></h3>
  <p><%= comment.content %></p>
    <% if current_user == comment.user %>
      <%= link_to "Delete", [comment.location, comment] , method: :delete %>
      <%= link_to "Edit", edit_location_comment_path(comment.location, comment ) %>
      <% end %>
</div>

</div>
<% end %>

<%= render 'comments/form' %>
</div>
